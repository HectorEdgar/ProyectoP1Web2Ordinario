@model IEnumerable<ProyectoP1Web2.Models.Alumno>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Grupo
        </th>
        <th>
            Estudiante
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Grupo.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Matricula }) |
            @Ajax.ActionLink("Detalles", "Details", "Alumnoes", new { id = item.Matricula },
           new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "detalle" }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Matricula })
        </td>
    </tr>
}

</table>
<div id="detalle">


</div>